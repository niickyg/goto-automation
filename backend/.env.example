# GoTo Connect API Configuration
GOTO_API_KEY=your_goto_api_key_here
GOTO_WEBHOOK_SECRET=your_webhook_secret_here
GOTO_API_BASE_URL=https://api.goto.com/v1

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
WHISPER_MODEL=whisper-1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/goto_automation
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Slack Configuration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#call-summaries

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@yourcompany.com
NOTIFICATION_EMAIL_RECIPIENTS=user1@company.com,user2@company.com

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Storage Configuration
TEMP_DIR=/tmp/goto-automation
MAX_AUDIO_SIZE_MB=100

# Processing Configuration
ASYNC_WORKERS=4
WEBHOOK_TIMEOUT_SECONDS=30
