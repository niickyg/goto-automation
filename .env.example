# GoTo Connect API
GOTO_API_KEY=your_goto_api_key_here
GOTO_WEBHOOK_SECRET=your_webhook_secret_here
GOTO_API_BASE_URL=https://api.goto.com/v1

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
WHISPER_MODEL=whisper-1

# Database
DATABASE_URL=postgresql://goto_user:changeme@localhost:5432/goto_automation
DB_PASSWORD=changeme
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis (optional, for background jobs)
REDIS_URL=redis://localhost:6379/0

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_CHANNEL=#call-summaries

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yourdomain.com
NOTIFICATION_EMAIL_RECIPIENTS=manager@company.com,team@company.com

# Application
APP_ENV=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Storage
TEMP_DIR=/tmp/goto-automation
MAX_AUDIO_SIZE_MB=100

# Processing
ASYNC_WORKERS=4
WEBHOOK_TIMEOUT_SECONDS=30
